---
import Layout from '@/layouts/Layout.astro'
import { profile } from '@/settings'

const { fullName } = profile

// Base-path safe URL (works locally + GitHub Pages)
const modelSrc = `${import.meta.env.BASE_URL}3Dmodels/snowboard_vise.glb`
---

<Layout title={`Projects | ${fullName}`}>
  <section class="mx-auto max-w-5xl px-4 py-10">
    <h1 class="text-4xl font-black text-center">Projects</h1>

    <div class="mt-10" style="width:min(100%, 980px); margin:0 auto;">
      <model-viewer
        src={modelSrc}
        alt="Snowboard vise 3D model"
        camera-controls
        auto-rotate
        environment-image="neutral"
        interaction-prompt="none"
        style="display:block; width:100%; height:620px; background:#f5f5f5; border-radius:18px;"
      >
      </model-viewer>

      <p class="mt-3 text-center text-sm text-base-content/60">
        Model URL: {modelSrc}
      </p>
    </div>
  </section>
</Layout>

